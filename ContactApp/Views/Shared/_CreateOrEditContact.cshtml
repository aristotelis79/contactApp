@model ContactViewModel

<div asp-validation-summary="All" class="alert-danger"></div>

<div class="container">
    <div class="form-group">
        <div class="row">
            <div class="col">
                <input class="form-control" placeholder="@nameof(Model.FullName)" aria-label="@nameof(Model.FullName)" asp-for="FullName" required />
                <span asp-validation-for="FullName"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col">
                <input class="form-control" placeholder="@nameof(Model.Email)" aria-label="@nameof(Model.Email)" asp-for="Email" required />
                <span asp-validation-for="Email"></span>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <div class="col">
                <input class="form-control" placeholder="@nameof(Model.Address)" aria-label="@nameof(Model.Address)" asp-for="Address" />
                <span asp-validation-for="Address"></span>
            </div>
        </div>
    </div>
    @for (var p = 0; p < Model.Phones.Count; p++)
    {
        <div class="form-group" id="phone-@p">
            <div class="row">
                <div class="col">
                    <input class="form-control" placeholder="PhoneType" aria-label="PhoneType" asp-for="@Model.Phones[p].PhoneType" />
                    <span asp-validation-for="@Model.Phones[p].PhoneType"></span>
                </div>
                <div class="col">
                    <input class="form-control" placeholder="PhoneNumber" aria-label="PhoneNumber" asp-for="@Model.Phones[p].PhoneNumber" />
                    <span asp-validation-for="@Model.Phones[p].PhoneNumber"></span>
                </div>
                <div class="col-2 text-right">
                    <button class="btn btn-danger delete-phone" type="button" data-phoneid="phone-@p"  data-number="@p" >Delete Phone</button>
                </div>
            </div>
        </div>
    }
    <div id="additional-phone"></div>
</div>
<div class="container h-100">
    <div class="row h-100 justify-content-center align-items-center">
        <button type="button" class="btn btn-secondary" id="add_phone">Add phone</button>
    </div>
    <br />
    <div class="row">
        <div class="col">
            <a type="button" class="btn btn-outline-dark btn-lg min-width-200" asp-controller="Contact" asp-action="Index">< Contacts</a>
        </div>
        <div class="col text-right">
            <button class="btn btn-lg btn-primary min-width-200" type="submit">@ViewBag.Title</button>
        </div>
    </div>
</div>

